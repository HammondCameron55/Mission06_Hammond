@model MovieSubmit

@{
    ViewData["Title"] = "Movie Form";
}

<p>This is where the form to add movies to the database will be</p>

<h1>Add a Movie to Joel's ever expanding database of movies</h1>
<form method="post">
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required />
    <br /><br />

    <label asp-for="Category">Category:</label>
    <select asp-for="Category" required>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Drama">Drama</option>
        <option value="Television">Television</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Comedy">Comedy</option>
        <option value="Family">Family</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="VHS">VHS</option>
    </select>
    <br /><br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required />
    <br /><br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required />
    <br /><br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br /><br />

    <label asp-for="Edited">Did you watch an edited version?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option> 
    </select>
    <br /><br />

    <label asp-for="Lent">Lent To:</label>
    <input asp-for="Lent" />
    <br /><br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />

    <br /><br />

    <button type="submit">Submit Application</button>
</form>

